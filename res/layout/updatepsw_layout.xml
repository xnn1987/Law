<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <include 
     android:id="@+id/detail_head_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     layout="@layout/law_detail_head"
     android:layout_alignParentTop="true"
      />  
      <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginLeft="10sp"
     android:layout_marginRight="10sp"
     android:background="@drawable/body_bg_2x158"
     android:layout_marginTop="10sp"
          >  
 <RelativeLayout 
    android:layout_marginTop="20sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
     >
      <TextView
     android:id="@+id/oldpsw_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="原始密码" />
 <EditText 
    android:id="@+id/oldpsw_edt"
    android:layout_marginLeft="60sp"
    android:layout_toRightOf="@id/oldpsw_txt"
    android:layout_gravity="center" 
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/body_bg_2x151"  
    android:hint="sssssssssssss" 
     />
 </RelativeLayout>   
  <RelativeLayout 
       android:layout_marginTop="20sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
     >
      <TextView
     android:id="@+id/newpsw_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:text="新  密  码" />
 <EditText 
    android:id="@+id/newpsw_edt"
    android:layout_marginLeft="60sp"
    android:layout_toRightOf="@id/newpsw_txt"
    android:layout_gravity="center" 
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
     android:background="@drawable/body_bg_2x151"   
    android:hint="sssssssssssss" 
     />
 </RelativeLayout>
  <RelativeLayout 
       android:layout_marginTop="20sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
     >
      <TextView
     android:id="@+id/newrps_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:text="再次输入新密码：" />
 <EditText 
    android:id="@+id/newrsp_edt"
    android:layout_toRightOf="@id/newrps_txt"
    android:layout_gravity="center" 
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:background="@drawable/body_bg_2x151"    
    android:hint="sssssssssssss" 
     />
 </RelativeLayout>
 </LinearLayout>    
</LinearLayout>