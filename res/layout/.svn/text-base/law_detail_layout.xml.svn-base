<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
  <include 
     android:id="@+id/detail_head_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     layout="@layout/law_detail_head"
     android:layout_alignParentTop="true"
      />  

<LinearLayout
    android:layout_below="@id/detail_head_layout" 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"   
    >
       <TextView 
       android:id="@+id/law_detail_title"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"  
     android:gravity="center"
     android:text="标题" 
       />
    
    <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"     
        >
    <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"    
        >

   <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10sp"
     android:orientation="horizontal"    
       >

       <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="@string/fawen_wenhao" 
           />
           <TextView 
                    android:id="@+id/fawen_wenhao_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="XXXXXXX" 
           />   
   </LinearLayout>
      <LinearLayout 
       android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10sp"
     android:orientation="horizontal"    
       >
       <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="@string/fawen_bumen" 
           />
           <TextView 
                    android:id="@+id/fawen_bumen_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="XXXXXXX" 
           />   
   </LinearLayout>
      <LinearLayout 
   android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10sp"
     android:orientation="horizontal"    
       >
       <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="@string/fawen_time" 
           />
           <TextView
      android:id="@+id/fawen_time_txt" 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="XXXXXXX" 
           />   
   </LinearLayout>
   
         <LinearLayout 
   android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10sp"
     android:orientation="horizontal"    
       >
       <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="@string/fawen_hangye" 
           />
           <TextView 
                    android:id="@+id/fawen_hangye_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="XXXXXXX" 
           />
   </LinearLayout>
      <LinearLayout 
   android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10sp"
     android:orientation="horizontal"    
       >
       <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="@string/fawen_style" 
           />
           <TextView 
                    android:id="@+id/fawen_style_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="XXXXXXX" 
           />   
   </LinearLayout>
      <LinearLayout 
   android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10sp"
     android:orientation="horizontal"    
       >
       <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="@string/fawen_start_time" 
           />
           <TextView 
                    android:id="@+id/start_time_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="XXXXXXX" 
           />   
   </LinearLayout>
      <LinearLayout 
   android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10sp"
     android:orientation="horizontal"    
       >
       <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="@string/fawen_bianji_time" 
           />
           <TextView 
     android:id="@+id/bianji_time_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:text="XXXXXXX"   
               /> 
   </LinearLayout>
   </LinearLayout>
      <ImageView
     android:id="@+id/fawen_shixiao_img"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="50sp"
     android:src="@drawable/ic_launcher"   
         />
   </LinearLayout>
   <ScrollView 
    android:layout_below="@id/detail_head_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" 
     android:scrollbars="vertical">
      <LinearLayout 
            android:layout_width="match_parent"
     android:layout_height="wrap_content" 
     android:orientation="vertical"   
          >
   <TextView 
     android:id="@+id/fawen_detail_txt"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="20sp"
     android:text="sssssssssssssssssss"      
       />
   </LinearLayout>
   </ScrollView>
</LinearLayout>  

  <include 
     android:id="@+id/bottom_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     layout="@layout/law_detial_bottom"
     android:layout_alignParentBottom="true"
      />
  <include 
        android:id="@+id/mysharelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        layout="@layout/myshare_layout"
    />
</RelativeLayout>