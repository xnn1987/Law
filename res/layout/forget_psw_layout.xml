<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/body_bg_2x11" >
    <include 
     android:id="@+id/detail_head_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     layout="@layout/law_detail_head"
     android:layout_alignParentTop="true"
      />
  <LinearLayout 
    android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@drawable/body_bg_2x1112"
    android:orientation="vertical"
      >    
        <EditText 
    android:id="@+id/user_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:textSize="25sp"
    android:textColor="#666633"
    android:background="@drawable/body_bg_2x151"  
    android:hint="请输入用户名"
    android:text="xnn1987"    
            />
        <Button 
     android:id="@+id/forget_psw_btn"
     android:layout_marginTop="40sp"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
   android:background="@drawable/forgetpsw"  
    />
    </LinearLayout>

</LinearLayout>