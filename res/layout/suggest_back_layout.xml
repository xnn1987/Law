<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@drawable/body_bg_2x11" >
     
  <include 
     android:id="@+id/detail_head_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     layout="@layout/law_detail_head"
     android:layout_alignParentTop="true"
      />  
    
<TableRow 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    >
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="反馈类型"
    android:textSize="25sp"
    android:textColor="#000033"
   
        />
    <CheckBox 
    android:id="@+id/fagui_error_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
        />
        <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="法规错误" 
        android:textSize="25sp"
    android:textColor="#000033"
        />
        <CheckBox 
    android:id="@+id/faguti_out_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
        />
                <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="法规遗漏"
        android:textSize="25sp"
    android:textColor="#000033" 
        />
</TableRow>    
<TableRow 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    >
      <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        />
          <CheckBox 
    android:id="@+id/fagui_bug_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
        />
                          <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="程序BUG" 
        android:textSize="25sp"
    android:textColor="#000033"
        />
        <CheckBox 
    android:id="@+id/fagui_suggest_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
        /> 
                                  <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="程序功能建议" 
        android:textSize="25sp"
    android:textColor="#000033"
        /> 
</TableRow>
<EditText 
    android:id="@+id/suggest_edt"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:textColor="#000033"
     android:background="@drawable/body_bg_2x151"  
    android:hint="swwwwffgghhbh"  
    />
</TableLayout>