<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   > 
   <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"   
       >
          <TextView 
    android:id="@+id/fugui_title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
     android:text="ddddddd" 
     android:textColor="#000000"        
          />
          <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"    
              >
                   <TextView 
          android:id="@+id/fugui_depart_txt"
          android:layout_below="@id/fugui_title_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text="ddddddd"  
           android:textColor="#000000"   
          />
                                      <TextView 
          android:id="@+id/fugui_lawno_txt"
          android:layout_below="@id/fugui_title_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text="ddddddd" 
           android:textColor="#000000"    
          />
                               <TextView 
          android:id="@+id/fugui_release_txt"
          android:layout_below="@id/fugui_title_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text="ddddddd"   
           android:textColor="#000000"  
          />                          
          </LinearLayout>
 
   </LinearLayout>

      <ImageView
          android:id="@+id/next_img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/btn_next_l"
          android:layout_alignParentTop="true" 
          android:layout_alignParentRight="true"
          />
</RelativeLayout>