<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <include 
     android:id="@+id/detail_head_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     layout="@layout/law_detail_head"
     android:layout_alignParentTop="true"
      />     
   <RelativeLayout 
       android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@drawable/body_bg_2x1112"
        >
         <TextView 
     android:id="@+id/user_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="账号:"   
    android:textSize="25sp"
    android:textColor="#666633"
             />
        <EditText 
    android:id="@+id/user_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/user_txt"
    android:layout_marginLeft="10sp"
    android:textSize="25sp"
    android:textColor="#666633"
    android:background="@drawable/body_bg_2x151"  
    android:hint="请输入用户名"
    android:text="xnn1987"    
            /> 
    </RelativeLayout>
       <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@drawable/body_bg_2x1112"
        >
         <TextView 
     android:id="@+id/pas_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="密码:"   
    android:textSize="25sp"
    android:textColor="#666633"
             />
        <EditText 
    android:id="@+id/pass_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/pas_txt"
    android:layout_marginLeft="10sp"
    android:textSize="25sp"
    android:textColor="#666633"
    android:background="@drawable/body_bg_2x151"  
    android:hint="请输密码"
     android:password="true"      
            />
   
    </RelativeLayout>
<TableLayout
    android:id="@+id/remember_tab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
     android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">
   <TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
         >
    <CheckBox 
    android:id="@+id/user_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_gravity="center"  
        />

    <TextView
        android:id="@+id/remember_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"  
        android:text="记住我" 
       android:textSize="25sp"
    android:textColor="#666633"/>

    <TextView 
    android:id="@+id/forget_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" 
    android:text="忘记密码???"
    android:layout_marginLeft="80sp"
        android:textSize="25sp"
    android:textColor="#0033FF"
    />
</TableRow>
</TableLayout>
<Button 
    android:id="@+id/login_btn"
    android:layout_marginTop="10sp"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
   android:background="@drawable/login"  
    />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginTop="80sp" 
    android:orientation="vertical"
    >
 <TextView 
    android:id="@+id/commend_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:text="你可以使用合作账号登陆："   
    android:textSize="25sp"
    android:textColor="#666633"
     />
 <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"     
     >
   <Button 
    android:id="@+id/qq_login_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/body_bg_2x146"
     /> 
      <Button 
    android:id="@+id/sina_login_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/body_bg_2x147"
     /> 
      <Button 
    android:id="@+id/tencet_login_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       android:background="@drawable/body_bg_2x148"
     />    
 </LinearLayout>
</LinearLayout>
</LinearLayout>