<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
   > 
   <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"   
       >
          <TextView 
    android:id="@+id/fugui_title_txt"
    android:layout_width="350sp"
    android:layout_height="wrap_content" 
     android:text="ddddddd" 
     android:textColor="#3366CC" 
     android:textSize="25sp"       
          />
          <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"    
              >
                   <TextView 
          android:id="@+id/fugui_depart_txt"
          android:layout_below="@id/fugui_title_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text="ddddddd"  
           android:textColor="#000000"   
          />
                                      <TextView 
          android:id="@+id/fugui_lawno_txt"
          android:layout_below="@id/fugui_title_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text="ddddddd" 
           android:textColor="#000000"    
          />
                               <TextView 
          android:id="@+id/fugui_release_txt"
          android:layout_below="@id/fugui_title_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text="ddddddd"   
           android:textColor="#000000"  
          />                          
          </LinearLayout>
 
   </LinearLayout>

      <ImageView
          android:id="@+id/next_img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/body_bg_2x17"
          android:layout_alignParentRight="true"
          android:gravity="center"
          />
      <TextView 
          android:id="@+id/shixiao_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/next_img"
          android:text="失效"
          android:textSize="16sp"  
          android:textColor="#FF0066"
          android:visibility="gone"
    />
</RelativeLayout>