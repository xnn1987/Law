<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <include 
     android:id="@+id/detail_head_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     layout="@layout/law_detail_head"
     android:layout_alignParentTop="true"
      />  
 <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
     >
    <TextView 
    android:id="@+id/title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="标 题："  
        />
    <EditText 
    android:id="@+id/title_edt"
    android:layout_toRightOf="@id/title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="ssssssssss"   
        />
    <TextView 
     android:layout_toRightOf="@id/title_txt"
     android:layout_below="@id/title_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="*多个关键字请用空格隔开"
        />
 </RelativeLayout>   
 <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
     >
    <TextView 
    android:id="@+id/title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="全文搜索："  
        />
    <EditText 
    android:id="@+id/quanwen_search_edt"
    android:layout_toRightOf="@id/title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="ssssssssss"   
        />
    <TextView 
     android:layout_toRightOf="@id/title_txt"
     android:layout_below="@id/quanwen_search_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="*多个关键字请用空格隔开"
        />
 </RelativeLayout>
  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
     >
    <TextView 
    android:id="@+id/title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="文号："  
        />
    <EditText 
    android:id="@+id/wenhao_edt"
    android:layout_toRightOf="@id/title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="ssssssssss"   
        />
    <TextView 
     android:layout_toRightOf="@id/title_txt"
     android:layout_below="@id/wenhao_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="*检索示例：国税发【2006】93号"
        />
 </RelativeLayout>
 <Button 
     android:id="@+id/start_search_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:text="开始搜索"
    android:layout_gravity="center" 
     />
</LinearLayout>