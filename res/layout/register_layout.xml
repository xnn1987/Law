<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <include 
     android:id="@+id/detail_head_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     layout="@layout/law_detail_head"
     android:layout_alignParentTop="true"
      /> 
      <LinearLayout 
     android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_gravity="center"  
    android:orientation="vertical"
    android:background="@drawable/body_bg_2x158"  
          >
   <RelativeLayout 
       android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
        >
         <TextView 
     android:id="@+id/user_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="用户名:  "   
    android:textSize="25sp"
    android:textColor="#666633"
             />
        <EditText 
    android:id="@+id/user_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/user_txt"
    android:layout_marginLeft="10sp"
    android:textSize="25sp"
    android:textColor="#666633"
    android:background="@drawable/body_bg_2x151"  
    android:hint="请输入用户名"
    android:text="xnn1987"    
            /> 
    </RelativeLayout> 
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
        android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_gravity="center" 
    >
    <TextView 
     android:id="@+id/email_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="邮      箱:"   
    android:textSize="25sp"
    android:textColor="#666633"
 
        />

   <EditText
       android:id="@+id/email_edt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center" 
       android:layout_toRightOf="@id/email_txt" 
       android:hint="请输入邮箱" 
       android:layout_marginLeft="10sp"
       android:textSize="25sp"
       android:textColor="#666633"
       android:background="@drawable/body_bg_2x151"  
    >
   </EditText>
  <TextView 
        android:id="@+id/email_niaos_txt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" 
       android:layout_toRightOf="@id/email_txt"
       android:layout_below="@id/email_edt"
        android:layout_marginLeft="10sp"
       android:text="你的密码将发送到此邮箱，请填写真实的邮箱"
       android:textSize="16sp"
       android:textColor="#CCCC99"
      />
</RelativeLayout> 
       <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
        >
         <TextView 
     android:id="@+id/pas_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="密      码:"   
    android:textSize="25sp"
    android:textColor="#666633"
             />
        <EditText 
    android:id="@+id/pass_edt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/pas_txt"
    android:layout_marginLeft="10sp"
    android:textSize="25sp"
    android:textColor="#666633"
    android:background="@drawable/body_bg_2x151"  
    android:hint="请输密码"
    android:password="true"    
            /> 
    </RelativeLayout>
 <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp" 
    android:layout_gravity="center" 
    >
    <TextView 
     android:id="@+id/user_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"  
    android:text="重复密码" 
     android:textSize="25sp"
    android:textColor="#666633"
        />

   <EditText
       android:id="@+id/repsw_edt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center" 
       android:layout_toRightOf="@id/user_txt" 
    android:textSize="25sp"
    android:textColor="#666633"
    android:layout_marginLeft="10sp"
    android:background="@drawable/body_bg_2x151"  
    android:hint="请输密码"
    android:password="true"  >

   </EditText>
</RelativeLayout>
</LinearLayout>   

</LinearLayout>